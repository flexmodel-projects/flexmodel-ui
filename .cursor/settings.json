{
  "ai": {
    "model": "claude-3.5-sonnet",
    "temperature": 0.1,
    "maxTokens": 4000,
    "contextWindow": 200000,
    "preferences": {
      "language": "zh-CN",
      "codeStyle": "typescript",
      "framework": "react",
      "uiLibrary": "antd"
    }
  },
  "project": {
    "name": "flexmodel-ui",
    "type": "react-typescript",
    "framework": "react-18",
    "uiLibrary": "antd-v5",
    "buildTool": "vite",
    "styling": "tailwind-css"
  },
  "rules": {
    "strictMode": true,
    "preferFunctionalComponents": true,
    "useTypeScript": true,
    "useAntdTokens": true,
    "compactTheme": true,
    "chineseComments": true
  },
  "fileAssociations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescript",
    "*.css": "css",
    "*.json": "json"
  },
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "target/**",
    "*.log",
    "yarn-error.log"
  ]
}
